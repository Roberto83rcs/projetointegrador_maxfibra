<?php
include 'conexao.php';

$usuario_id = $_POST['usuario_id'];
$plano_id = $_POST['plano_id'];

// Atualiza o plano do usuÃ¡rio
$sql = "UPDATE usuarios SET plano_id = '$plano_id' WHERE id = '$usuario_id'";

if ($conn->query($sql) === TRUE) {
    echo "Plano contratado com sucesso!";
} else {
    echo "Erro ao contratar plano: " . $conn->error;
}

$conn->close();
?>
